{% extends 'layout.html.twig' %}

{% block body_id 'admin_post_edit' %}

{% block main %}
    <h1>{{ 'Edit Post'|trans({'%id%': post.id}) }}</h1>

    {{ include('BlogBundle::admin/blog/_form.html.twig', {
        form: form,
        button_label: 'Save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_post_show', {id: post.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'Show Post'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('BlogBundle::admin/blog/_delete_form.html.twig', {post: post}, with_context = false) }}
    </div>

    {{ parent() }}

   
{% endblock %}
