

{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/login.js') }}"></script>
{% endblock %}

{% block main %}
   

    <div class="row">
        <div class="col-sm-8">
            <div class="well">
               {{ form_start(form) }}
                    <fieldset>
                        <legend> {{ 'Register' }}</legend>
                        <div class="form-group">
                        	<div class="col-md-8 col-md-offset-2">
                  				{{ form_row(form.fullName, {'attr': {'class': 'form-control'}}) }}
               				</div>
                        </div>
                        <div class="form-group">
                        	<div class="col-md-8 col-md-offset-2">
                  				{{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
               				</div>
                        </div>
                        <div class="form-group">
                        	<div class="col-md-8 col-md-offset-2">
                  				{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
               				</div>
                        </div>
                         <div class="form-group">
                        	<div class="col-md-8 col-md-offset-2">
                  				{{ form_row(form.roles, { 'attr': {'class': 'select_group'}, 'empty_value': '-- Add to Group --' })  }}
               				</div>
                        </div>
                        <div class="form-group">
                        	<div class="col-md-8 col-md-offset-2">
                  				{{ form_row(form.password.first, {'attr': {'class': 'form-control'}}) }}
               				</div>
                        </div>
                        <div class="form-group">
                        	<div class="col-md-8 col-md-offset-2">
                  				{{ form_row(form.password.second, {'attr': {'class': 'form-control'}}) }}
               				</div>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <button type="submit" class="btn btn-primary">
                            {{ 'Register' }}
                        </button>
                        <a class="btn btn-primary" href="{{ path('security_login') }}">
	                        {{ 'Go To login' }}
	                    </a>

                    </fieldset>
                {{ form_end(form) }}
					
            </div>
        </div>


    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    
{% endblock %}

